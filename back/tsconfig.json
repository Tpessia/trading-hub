{
  "compilerOptions": {
    "target": "es2017", // transpilation target
    "module": "commonjs", // ts module importation syntax
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,

    "noImplicitAny": true, // everything should be typed
    "strict": true, // enable MyType | null
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"]
}
